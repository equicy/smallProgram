@import "../partTimeList/partTimeList.wxss";
.job{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 21rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.job-caption{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 34rpx;
}
.caption{  
  color: #333333;
}
.salary{
  color: #ff9947;
}
.guarantee{
  /* padding: 21rpx 19rpx; */
  margin: 14rpx 0;
  padding: 0;
  font-size: 0;
}
.guarantee image{
  width: 107rpx;
  height: 27rpx;
}
.job-way{
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #848484;
}
.job-map{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 0;
  margin-top: 25rpx;
  padding: 32rpx 0;
  border-top: 1px solid #eeeeee;
}
.job-map text{
  font-size: 30rpx;
}
.address image{
  margin: 0 5rpx 0 -10rpx;
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
}
.distance{
  display: flex;
  flex-direction: row;
}
.distance image{
  margin-left: 15rpx;
  margin-top: 13rpx;
  width:11rpx;
  height: 21rpx;
}
.recruit-detail{
  width: 100%;
  padding: 22rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}
.detailTitle{
  font-size: 0;
  color: #333333; 
  border-bottom: 1px solid #eeeeee;
  padding-bottom:23rpx;
  box-sizing: border-box;
  margin-bottom: 23rpx;
}
.detailTitle text{
  display: inline-block;
  border-left: 10rpx solid #4cd94c;
  padding-left: 9rpx;
  font-size: 30rpx;
  height: 42rpx;
  vertical-align: bottom;
}
.recruit-content{
  color: #848484;
  font-size: 26rpx;
}

.seller{
  display: flex;
  flex-direction: row;
}
.seller-avator image{
  width: 125rpx;
  height: 125rpx;
  border-radius: 10rpx;
}
.seller-data{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  margin-top: 18rpx;
}
.seller-top{
  display: flex;
  flex-direction: row;
  height: 37rpx;
}
.seller-type{
  font-size: 26rpx;
  color:#848484;
  vertical-align: top;
}
.seller-certification{
  font-size: 0;
}
.seller-certification image{
  margin-top: 5rpx;
  margin-left: 20rpx;
  width: 120rpx;
  height: 32rpx;
}

.seller-bottom {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  height: 33rpx;
  line-height: 33rpx;
}

.type {
  color: #848484;
}

.grade {
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
  color: #fd474c;
}

.grade image {
  margin-top: 2rpx;
  margin-right: 9rpx;
  width: 26rpx;
  height: 26rpx;
}

.detail-bottom{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 97rpx;
}
.detail-collection{
  /* height: 100%; */
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 280rpx;
  background-color: #fff;
  line-height: 97rpx;
  font-size: 0;
}
.detail-collection image{
  margin-top: 33rpx;
  width: 40rpx;
  height: 37rpx;
}
.collection-text text{
  margin-left: 24rpx;
  font-size: 34rpx;
  color: #4cd94c;
}
.signUp{
  height: 100%;
  width: 470rpx;
  background-color: #4cd94c;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  line-height: 97rpx;
}
.out-container{
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(4rpx);
  overflow: hidden;
  
}
.enroll{
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  height: 793rpx;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  opacity: 1;
}
.enroll-title{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #cccccc;
  justify-content: space-between;
}
.enroll-left{
  display: inline-block;
  border-left: 10rpx solid #4cd94c;
  padding-left: 9rpx;
  height: 42rpx;
  vertical-align: bottom;
  color: #333;
}
.enroll-input{
  width: 100%;
  height: 340rpx;
  box-sizing: border-box;
}
.enroll-input textarea{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #fafafa;
  border-radius: 20rpx;
  margin-top: 24rpx;
  padding: 30rpx 23rpx;
  font-size: 26rpx;
  color: #ccc;
  max-height: 100%;
}
.textarea-place{
  font-size: 26rpx;
  color: #ccc;
}
.input-number{
  z-index: 9999;
  font-size: 26rpx;
  color: #ccc;
  text-align: right;
  margin: -22rpx 43rpx 0;
}
.select-resume{
  margin-top: 30rpx;
  margin-bottom: 15rpx;
  display: inline-block;
  border-left: 10rpx solid #4cd94c;
  padding-left: 9rpx;
  height: 42rpx;
  vertical-align: bottom;
  color: #333;
  font-size: 30rpx;
}
.radio-group{
  font-size: 34rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 53rpx;
}
.enroll-btn{
  margin: 22rpx auto;
  width: 530rpx;
  box-sizing: border-box;
  background-color: #4cd94c;
  color: #fff;
  font-size: 34rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-radius: 49rpx;
}
.ennroll-protocol{
  text-align: center;
  font-size: 30rpx;
}
.ennroll-protocol text{
  color: #4cd94c;
}
.show{
  display: block;
}
.hide{
  display: none;
}