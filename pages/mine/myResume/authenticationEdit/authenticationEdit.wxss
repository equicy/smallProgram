.container{
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #333;
}
form{
  width: 100%;
}
.edit-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  height: 87rpx;
  line-height: 87rpx;
}
.edit-textarea{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
}
.edit-key{
  box-sizing: border-box;
  margin-right: 38rpx;
  width: 108rpx;
  text-align: justify;
  height: 87rpx;
  line-height: 87rpx;
}
.edit-key text{
  height: 50rpx;
}
.edit-key text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
input{
  display: block;
  margin-top: 19rpx;
}
radio {
  transform:scale(0.8);
}
.enroll-input{
  width: 100%;
  height: 340rpx;
  box-sizing: border-box;
}
.enroll-input textarea{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  background-color: #fafafa;
  border-radius: 20rpx;
  margin-top: 24rpx;
  padding: 9rpx 9rpx;
  font-size: 26rpx;
  color: #ccc;
  max-height: 100%;
}
.textarea-place{
  font-size: 26rpx;
  color: #ccc;
}
.input-number{
  z-index: 99999;
  font-size: 26rpx;
  color: #ccc;
  text-align: right;
  /* margin-top: -30rpx; */
  /* margin: -35rpx 43rpx 0; */
}
.edit-value{
  width: 570rpx;
}
.submit-btn button{
  width: 530rpx;
  height: 97rpx;
  margin: 70rpx auto;
  border-radius: 49rpx;
  background-color: #ccc;
  font-size: 34rpx;
  color: #fff;
}
.base-update{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  padding: 0 19rpx;
  background-color: #fff;
  margin-top: 28rpx;
  border-radius: 10rpx;
  align-content: center;
  height: 147rpx;
  line-height: 147rpx;
}
.update-image image{
  width: 107rpx;
  height: 107rpx;
  vertical-align: middle;
  margin-right: 38rpx;
}
