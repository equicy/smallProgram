.container{
  background-color: #fafafa;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.card-title{
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 0;
}
.card-title image{
  width: 30rpx;
  height: 34rpx;
  margin-right: 15rpx;
  /* vertical-align: bottom; */
}
.card-title text{
  font-size: 26rpx;
}
.base-data{
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  padding: 0 19rpx;
  background-color: #fff;
  margin-top: 28rpx;
  border-radius: 10rpx;
}
.base-title{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #4cd94c;
  height: 88rpx;
  line-height: 88rpx;
  align-content: center;
  justify-content: space-between;
  border-bottom: 1px solid #fafafa;  
}
.base-title image{
  width: 26rpx;
  height: 27rpx;
}
.base-context{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.base-key{
  margin-right: 38rpx;
  width: 108rpx;
  text-align: justify;
  height: 40rpx;
}
.base-key text::after{
  width: 100%;
  display: inline-block;
  content: '';
}
.base-value{
  width: 525rpx;
  margin-bottom: 20rpx;
}
.card-bottom{
  margin-top: 30rpx;
}
.base-update{
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  padding: 0 19rpx;
  background-color: #fff;
  margin-top: 28rpx;
  border-radius: 10rpx;
  align-content: center;
  height: 147rpx;
  line-height: 147rpx;
}
.update-image image{
  width: 107rpx;
  height: 107rpx;
  vertical-align: middle;
  margin-right: 38rpx;
}
